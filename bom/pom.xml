<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.sunshower.arcus</groupId>
  <artifactId>bom</artifactId>
  <version>1.41.11-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>io.sunshower.environment</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.5.Final</version>
  </parent>

  <name>Sunshower Arcus Bill-Of-Materials</name>
  <url>http://maven.apache.org</url>

  <properties>
    <environment.version>1.0.5.Final</environment.version>
    <arcus.version>1.41.11-SNAPSHOT</arcus.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <developers>
    <developer>
      <email>josiah@sunshower.io</email>
      <url>https://sunshower.io</url>
      <roles>
        <role>
          admin
        </role>
      </roles>
    </developer>
    <developer>
      <email>lisa@sunshower.io</email>
      <url>https://sunshower.io</url>
      <roles>
        <role>
          admin
        </role>
      </roles>
    </developer>
  </developers>

  <modules>
    <module>imported</module>
    <module>exported</module>
  </modules>

  <scm>
    <url>https://git@github.com/sunshower-io/sunshower-arcus</url>
    <connection>git+ssh://git@github.com/sunshower-io/sunshower-arcus</connection>
    <developerConnection>
      git+ssh://git@github.com/sunshower-io/sunshower-arcus
    </developerConnection>
    <tag>common libraries</tag>
  </scm>

  <distributionManagement>
    <repository>
      <id>maven-central</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
    <snapshotRepository>
      <id>maven-central</id>
      <name>Sunshower-env Github</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>sunshower-github</id>
      <name>Sunshower-env Github</name>
      <url>https://maven.pkg.github.com/sunshower-io/*</url>
    </repository>
  </repositories>
  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-gpg-plugin</artifactId>
          <executions>
            <execution>
              <id>sign-artifacts</id>
              <phase>deploy</phase>
              <goals>
                <goal>sign</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
